<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.diekautz.ideplugin</id>
    <name>OpenEye - Eye-Tracking Studies</name>
    <vendor>Malte Stellmacher</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.diekautz.ideplugin.toolWindow.OpenEyeToolWindowFactory"
                    id="OpenEyeToolWindow"/>

        <applicationConfigurable
                parentId="root"
                instance="com.github.diekautz.ideplugin.config.OpenEyeSettingsConfigurable"
                id="plugin.openeye"
                displayName="OpenEye Settings"/>
        <applicationService serviceImplementation="com.github.diekautz.ideplugin.config.OpenEyeSettingsState"/>
        <applicationConfigurable parentId="plugin.openeye"
                                 instance="com.github.diekautz.ideplugin.config.ParticipantConfigurable"
                                 id="plugin.openeye.participant"
                                 displayName="Participant Configuration"/>
        <applicationService serviceImplementation="com.github.diekautz.ideplugin.config.ParticipantState"/>

        <notificationGroup id="Recording File Saved"
                           displayType="BALLOON"/>
    </extensions>

    <actions>
        <group id="com.github.diekautz.ideplugin.actions.OpenEyeGroup"
               text="OpenEye"
               popup="true"
               icon="AllIcons.Actions.ShowCode">
            <add-to-group group-id="MainMenu" anchor="last"/>

            <action id="com.github.diekautz.ideplugin.actions.SetupNewParticipantAction"
                    class="com.github.diekautz.ideplugin.actions.SetupNewParticipantAction"
                    text="Setup New Participant"
                    description="Clears all data and opens questioner for new participant"
                    icon="AllIcons.Actions.AddFile"/>

            <separator/>

            <action id="com.github.diekautz.ideplugin.actions.HighlightGazeElementAction"
                    class="com.github.diekautz.ideplugin.actions.HighlightGazeElementAction"
                    text="Visualize Recorded Gaze"
                    description="Will used previously recorded gaze data to color looked-at elements based on how often they were looked at"
                    icon="AllIcons.Diff.MagicResolveToolbar"/>
            <action id="com.github.diekautz.ideplugin.actions.ClearHighlightersAction"
                    class="com.github.diekautz.ideplugin.actions.ClearHighlightersAction"
                    text="Clear Highlights"
                    description="Clears all previously highlighted elements"
                    icon="AllIcons.General.Reset"/>
            <action id="com.github.diekautz.ideplugin.actions.recording.StartRecordingAction"
                    class="com.github.diekautz.ideplugin.actions.recording.StartRecordingAction"
                    text="Start Tobii Pro Recording"
                    description="Starts or continuous a Tobii Pro recording via LSL"
                    icon="AllIcons.Actions.Execute">
                <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt PLUS"/>
            </action>
            <action id="com.github.diekautz.ideplugin.actions.recording.StopRecordingAction"
                    class="com.github.diekautz.ideplugin.actions.recording.StopRecordingAction"
                    text="Stop OpenEye Recording"
                    description="Stops an ongoing recording"
                    icon="AllIcons.Actions.Pause">
                <keyboard-shortcut keymap="$default" first-keystroke="shift ctrl alt MINUS"/>
            </action>

            <separator/>

            <action id="com.github.diekautz.ideplugin.actions.recording.SaveAllRunDataAction"
                    class="com.github.diekautz.ideplugin.actions.recording.SaveAllRunDataAction"
                    text="Save OpenEye Run"
                    description="Saves element gazes and raw recorded data"
                    icon="AllIcons.Actions.MenuSaveall">
            </action>

            <separator/>

            <separator text="Debug"/>

            <action id="com.github.diekautz.ideplugin.actions.debug.CalculateScreenBrightnessAction"
                    class="com.github.diekautz.ideplugin.actions.debug.CalculateScreenBrightnessAction"
                    text="Screen Brightness"
                    icon="AllIcons.Actions.Show"/>
            <action id="com.github.diekautz.ideplugin.actions.debug.ScanLSLStreamsAction"
                    class="com.github.diekautz.ideplugin.actions.debug.ScanLSLStreamsAction"
                    text="Resolve LSL Streams"
                    description="Refreshes resolved lab streaming layer stream infos"/>
        </group>
    </actions>
</idea-plugin>
