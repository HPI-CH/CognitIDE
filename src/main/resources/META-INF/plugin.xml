<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.diekautz.ideplugin</id>
    <name>ide-plugin Template</name>
    <vendor>diekautz</vendor>

    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.diekautz.ideplugin.toolWindow.MyToolWindowFactory" id="MyToolWindow"/>
    </extensions>

    <applicationListeners>
        <listener class="com.github.diekautz.ideplugin.listeners.MyFrameStateListener" topic="com.intellij.ide.FrameStateListener"/>
    </applicationListeners>
    <actions>
        <action id="com.github.diekautz.ideplugin.actions.MyAction"
            class="com.github.diekautz.ideplugin.actions.MyAction" text="Test Action">
            <add-to-group group-id="ToolsMenu" anchor="last" />
        </action>
        <action id="com.github.diekautz.ideplugin.actions.demo.ScanLSLStreamsAction"
                class="com.github.diekautz.ideplugin.actions.demo.ScanLSLStreamsAction" text="Resolve LSL Streams"
                description="Refreshes resolved lab streaming layer stream infos" />
        <action id="com.github.diekautz.ideplugin.actions.demo.EditorAreaIllustrationAction"
                class="com.github.diekautz.ideplugin.actions.demo.EditorAreaIllustrationAction" text="Area Illustration">
            <add-to-group group-id="ToolsMenu" anchor="last" />
        </action>
        <action id="com.github.diekautz.ideplugin.actions.demo.PsiNavigationDemoAction"
                class="com.github.diekautz.ideplugin.actions.demo.PsiNavigationDemoAction" text="Psi Nav Demo">
            <add-to-group group-id="ToolsMenu" anchor="last" />
        </action>
        <action id="com.github.diekautz.ideplugin.actions.demo.ProjectFileIndexSampleAction"
                class="com.github.diekautz.ideplugin.actions.demo.ProjectFileIndexSampleAction"
                text="ProjectFileIndexSample">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
